<div class="row">
	<div class="col-lg-8 mx-auto">
		<h1>SMS Sender</h1>
		<%= form_with(url: send_sms_path, method: :post) do |form| %>
			<div class="mb-3">
				<%= form.label :phone_number, class: "form-label" %>
				<%= form.telephone_field :phone_number, class: "form-control", placeholder: "ex. 2341234567890", required: true %>
			</div>
			<div class='mb-3'>
				<%= form.label :message, class: "form-label" %>
				<%= form.text_area :message, rows: 4, class: "form-control", placeholder: "Enter your message here!", required: true %>
			</div>
			<div>
				<%= form.submit "Send SMS", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
